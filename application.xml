<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="ld28" package="com.pixodrome.ld28.ld28" version="1.0.0" company="Thomas BAUDON" />
	
	<!-- output -->
	<app main="com.pixodrome.ld28.Main" file="ld28" path="bin" />
	
	<window background="#000000" fps="60" />
	<window width="480" height="768" unless="mobile"/>
	<window width="0" height="0" if="html5" />
	<window orientation="portrait" vsync="false" antialiasing="0" if="cpp" fullscreen = "true"/>
	
	<!-- Templates 
	<template path="template/index.html" rename="index.html" />-->
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	
	<!-- assets -->
	<icon path="assets/img/avatar.png" />
	
	<assets path="assets/img" rename="img" />
	<assets path="assets/shaders" rename="shaders" />
	
	<!-- optimize output 
	<haxeflag name="-dce full" /> -->
	
</project>